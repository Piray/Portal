<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="shortcut icon" href="{{ base_url }}/assets/vendor/twitter/bootstrap/docs-assets/ico/favicon.png">

        <title>{% block title %}{% endblock %}</title>

        <!-- Bootstrap core CSS -->
        <link href="{{ base_url }}/assets/vendor/twitter/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="{{ base_url }}/assets/portal/css/layout.css" rel="stylesheet">

        <!-- Custom styles for portal -->
        <link href="{{ base_url }}/assets/portal/css/customize.css" rel="stylesheet">
        <!-- Just for debugging purposes. Don't actually copy this line! -->
        <!--[if lt IE 9]><script src="../../docs-assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
        {% block style %}
        {% endblock %}
    </head>

    <body>

        <!-- Wrap all page content here -->
        <div id="wrap">

            <!-- Fixed navbar -->
            <div class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    <!-- Toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ base_url }}/">Piray</a>
                    </div>

                    <!-- Collect the nav links and other content for toggling -->
                    <!-- start nav-collapse -->
                    <div class="collapse navbar-collapse">
                        <!-- start main nav -->
                        <ul class="nav navbar-nav">
                            <li><a href="{{ base_url }}/apps"><span class="glyphicon glyphicon-th-large"></span> Apps</a></li>
                            <li><a href="{{ base_url }}/contact"><span class="glyphicon glyphicon-envelope"></span> Contact</a></li>
                        </ul>
                        <!-- end main nav -->

                        <!-- start authenticate nav -->
                        <ul class="nav navbar-nav navbar-right">
                            {% if login_user %}
                            {% set message_count = 12 %}
                            <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Message <span class="badge">{{ message_count }}</span></a>
                                <ul class="dropdown-menu">
                                    {% for i in 0..message_count %}
                                    <li> <a href="#"> there are some news or informations.</a> </li>
                                    {% endfor %}
                                </ul>
                            </li>
                            <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> {{ login_user.name }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Profile</a></li>
                                    <li><a href="#">Settings</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{ base_url }}/logout">Logout</a></li>
                                </ul>
                            </li>
                            {% else %}
                            <li><a href="{{ base_url }}/login"><span class="glyphicon glyphicon-lock"></span> Login</a></li>
                            {% endif %}
                        </ul>
                        <!-- end authenticate nav -->
                    </div>
                    <!-- end nav-collapse -->
                </div>
            </div>

            <!-- Begin page content -->
            <div class="container">
                {% block main %}
                {% endblock %}
            </div>
        </div>

        <div id="footer">
            <div class="container">
                <p class="text-muted text-center">Copyright Â© 2014 Piray Co., Ltd. All Rights Reserved.</p>
            </div>
        </div>


        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="{{ base_url }}/assets/vendor/twitter/bootstrap/dist/js/bootstrap.min.js"></script>
        {% block script %}
        {% endblock %}
    </body>
</html>
